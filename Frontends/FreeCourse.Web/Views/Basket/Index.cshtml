@{
}
@model BasketViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Basket</h5>

                @if(Model != null && Model.BasketItems.Any())
                {
                    <table class="table table-striped">
                        <tr>
                            <th>Course Name</th>
                            <th>Course Price</th>
                            <th>Operations</th>
                        </tr>

                        @foreach (var item in Model.BasketItems)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>$@item.CurrentPrice @(Model.HasDiscount ? $"({Model.DiscountRate.Value}% discount applied!)" : "") </td>
                                <td>
                                    <a asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-courseId="@item.CourseId" class="btn btn-danger btn-sm">Remove</a>
                                </td>
                            </tr>
                        }

                        @if (Model.HasDiscount)
                        {
                            <tr>
                                <td>Discount Rate</td>
                                <th colspan="2">@Model.DiscountRate.Value %</th>
                            </tr>
                        }

                        <tr>
                            <td>@(Model.HasDiscount ? "Discounted Price" : "Total Price")</td>
                            <th colspan="2">$@Model.TotalPrice</th>
                        </tr>
                    </table>

                    <form asp-controller="Basket" asp-action="ApplyDiscount">
                        @if (Model.HasDiscount)
                        {
                            <div class="alert alert-success">
                                "@Model.DiscountCode" discount code has been applied!
                                <a asp-controller="Basket" asp-action="CancelAppliedDiscount">(Cancel)</a>
                            </div>
                        }

                        <div class="input-group mb-3">
                            <input type="text" name="DiscountApplyInput.Code" class="form-control" />
                            <button type="submit" class="btn btn-outline-secondary">Apply</button>
                        </div>

                        @if (TempData["discountStatus"] != null && (bool)TempData["discountStatus"] == false)
                        {
                            <div class="text-danger">Discount code is invalid!</div>
                        }

                        @if (TempData["discountError"] != null)
                        {
                            <div class="text-danger">@TempData["discountError"]</div>
                        }
                    </form>

                    <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Go to Payment</a>
                    <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Back to Homepage</a>

                } else
                {
                    <div class="alert alert-info">Basket is empty</div>
                }
            </div>
        </div>
    </div>
</div>